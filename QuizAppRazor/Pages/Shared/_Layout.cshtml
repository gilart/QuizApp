<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizApp</title>

    <!-- Bootstrap 5 z CDN -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <!-- Nazwa/logo -->
                <a class="navbar-brand" asp-page="/Index">QuizApp</a>

                <!-- Przykładowe linki w navbarze -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Przełącz nawigację">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Quizzes/Index">Quizy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Quizzes/Create">Utwórz Quiz</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Miejsce na zawartość poszczególnych stron -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center text-lg-start mt-4">
        <div class="text-center p-3">
            © 2025 QuizApp
        </div>
    </footer>

    <!-- Bootstrap JS z CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-..."
            crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>